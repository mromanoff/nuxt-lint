{
  "name": "nuxt-webstorm-lint",
  "version": "1.0.0",
  "description": "Webstorm lint set up. eslint and stylelint",
  "author": "Michael Romanoff",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue,.gql --ignore-path .gitignore .",
    "lint:autofix": "eslint --ext .js,.vue,.gql --fix --ignore-path .gitignore .",
    "stylelint": "stylelint '**/*.{css,vue}",
    "stylelint:autofix": "stylelint '**/*.{css,vue}' --fix",
    "lint:all:autofix": "npm run lint:autofix && npm run stylelint:autofix",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^1.0.1",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/stylelint-module": "^3.1.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^6.1.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "husky": "^2.6.0",
    "jest": "^24.1.0",
    "lint-staged": "^8.2.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^19.0.0",
    "vue-jest": "^4.0.0-0"
  }
}
